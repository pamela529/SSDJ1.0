/* detail.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f8f8f8;
}

/* 手机外框样式 */
.phone-frame {
  position: relative;
  width: 375px;
  height: 812px;
  background-color: white;
  border-radius: 40px;
  overflow: hidden;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
}

/* 顶部状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 25px;
  height: 44px;
  background-color: #ffffff;
}

.time {
  font-size: 14px;
  font-weight: 600;
}

.signal-icons {
  display: flex;
  gap: 5px;
}

/* 导航栏 */
.navigation-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 15px;
  height: 44px;
  background-color: #ffffff;
}

.back-btn {
  padding: 10px;
  font-size: 24px;
  color: #333;
}

.more-btn {
  padding: 10px;
  font-size: 24px;
  color: #333;
}

/* 产品滚动区域 */
.product-scroll {
  flex: 1;
  overflow: hidden;
}

/* 商品图片 */
.product-image-container {
  position: relative;
}

.product-image {
  width: 100%;
  height: 375px;
  object-fit: cover;
}

.image-counter {
  position: absolute;
  bottom: 10px;
  right: 10px;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  padding: 3px 8px;
  border-radius: 10px;
  font-size: 12px;
}

/* 价格卡片 */
.price-card {
  padding: 15px;
  background-color: white;
  border-bottom: 1px solid #f5f5f5;
}

.price-section {
  display: flex;
  align-items: baseline;
  margin-bottom: 5px;
}

.price-symbol {
  font-size: 16px;
  font-weight: bold;
  color: #ff4d4f;
}

.price-amount {
  font-size: 24px;
  font-weight: bold;
  color: #ff4d4f;
}

.price-condition {
  margin-left: 10px;
  padding: 2px 5px;
  font-size: 12px;
  color: #ff4d4f;
  background-color: #fff1f0;
  border-radius: 4px;
}

.installment-section {
  font-size: 12px;
  color: #666;
  margin-top: 5px;
}

.installment-text {
  color: #666;
}

/* 商品标题和店铺信息 */
.product-title-section {
  padding: 15px;
  background-color: white;
  border-bottom: 1px solid #f5f5f5;
}

.title-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 15px;
}

.store-badge {
  display: inline-block;
  padding: 2px 5px;
  font-size: 10px;
  color: #ff4d4f;
  background-color: #fff1f0;
  border: 1px solid #ffccc7;
  border-radius: 4px;
  margin-right: 5px;
  margin-top: 3px;
}

.product-title {
  flex: 1;
  font-size: 16px;
  font-weight: 500;
  line-height: 1.5;
  color: #333;
}

.store-row {
  display: flex;
  align-items: center;
}

.store-avatar {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  margin-right: 5px;
}

.store-name {
  font-size: 13px;
  color: #666;
  margin-right: 10px;
}

.store-status {
  font-size: 12px;
  color: #999;
}

/* 商品保障信息 */
.guarantee-section {
  padding: 12px 15px;
  background-color: #f9f9f9;
  border-bottom: 10px solid #f5f5f5;
}

.guarantee-item {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.guarantee-icon {
  margin-right: 5px;
}

.guarantee-text {
  font-size: 12px;
  color: #666;
}

/* 商品描述 */
.description-section {
  padding: 15px;
  background-color: white;
}

.section-header {
  margin-bottom: 10px;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.description-content {
  font-size: 14px;
  color: #666;
  line-height: 1.6;
}

.spec-item {
  display: flex;
  margin-top: 10px;
}

.spec-label {
  width: 60px;
  font-size: 14px;
  color: #999;
}

.spec-value {
  flex: 1;
  font-size: 14px;
  color: #333;
}

/* 底部购买栏 */
.purchase-bar {
  height: 60px;
  border-top: 1px solid #f2f2f2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  padding: 0 15px;
}

.action-buttons {
  display: flex;
  align-items: center;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 45px;
  margin-right: 5px;
}

.action-btn .icon {
  font-size: 18px;
  margin-bottom: 2px;
}

.action-btn .label {
  font-size: 10px;
  color: #999;
}

.purchase-buttons {
  display: flex;
  align-items: center;
}

.contact-btn {
  height: 36px;
  padding: 0 20px;
  font-size: 14px;
  color: #333;
  background-color: #f5f5f5;
  border: none;
  border-radius: 18px;
  margin-right: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.buy-btn {
  height: 36px;
  padding: 0 20px;
  font-size: 14px;
  color: white;
  background-color: #ff4d4f;
  border: none;
  border-radius: 18px;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* iPhone 底部指示器 */
.iphone-home-indicator {
  height: 5px;
  width: 40%;
  background-color: #999;
  border-radius: 3px;
  margin: 10px auto 5px;
} 